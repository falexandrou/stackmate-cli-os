{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@faker-js/faker": "^7.6.0",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.189",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-monorepo": "0.3.2",
    "jest": "^29.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-transform-paths": "^2.0.3",
    "tslib": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "rules": {
      "class-methods-use-this": "off",
      "function-paren-newline": "off",
      "monorepo/no-relative-import": "error",
      "object-curly-newline": "off",
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "plugin:monorepo/recommended"
    ],
    "ignorePatterns": [
      "**/dist/**"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "workspaces": [
    "packages/cli",
    "packages/engine"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "cmd": "packages/cli/bin/dev",
    "cmd:dist": "packages/cli/bin/run",
    "schema": "yarn workspace @stackmate/engine bin:schema",
    "release": "yarn build && yarn changeset publish",
    "test": "yarn schema && turbo run test",
    "test:cli": "yarn workspace @stackmate/cli run test",
    "test:engine": "yarn workspace @stackmate/engine run test",
    "test:watch": "turbo run test:watch"
  },
  "packageManager": "yarn@3.2.3"
}
