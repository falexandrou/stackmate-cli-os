{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/chai": "^4.3.3",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-monorepo": "0.3.2",
    "jest": "^29.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-transform-paths": "^2.0.3",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "eslintConfig": {
    "rules": {
      "class-methods-use-this": "off",
      "function-paren-newline": "off",
      "monorepo/no-relative-import": "error",
      "object-curly-newline": "off",
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "plugin:monorepo/recommended"
    ],
    "ignorePatterns": [
      "**/dist/**"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "workspaces": [
    "packages/cli",
    "packages/engine"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -vipt run build",
    "cli:run": "packages/cli/bin/run",
    "cli:dev": "packages/cli/bin/dev",
    "test": "yarn engine:schema && yarn test:run",
    "engine:schema": "yarn workspace @stackmate/engine run schema:generate",
    "test:run": "jest --verbose --useStderr --detectOpenHandles --silent=false",
    "test:watch": "yarn test:run --watchAll"
  },
  "packageManager": "yarn@3.2.3"
}
