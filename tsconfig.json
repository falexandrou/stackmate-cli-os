{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "downlevelIteration": true,
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strictFunctionTypes": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es2019",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@constants": [
        "src/constants"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@mocks/*": [
        "tests/mocks/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "jest.setup.ts",
    "node_modules/cdktf/lib/testing/adapters/jest.d.ts"
  ],
  "exclude": [
    "**/dist"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
