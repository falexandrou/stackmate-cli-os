{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "downlevelIteration": true,
    "composite": false,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "paths": {
      "@stackmate/cli/*": [
        "packages/cli/src/*"
      ],
      "@stackmate/engine/*": [
        "packages/engine/src/*"
      ],
      "tests/cli/*": [
        "packages/cli/tests/*"
      ],
      "tests/engine/*": [
        "packages/engine/tests/*"
      ]
    }
  },
  "references": [
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/engine"
    }
  ],
  "include": [
    "packages/cli/src/**/*",
    "packages/cli/tests/**/*",
    "packages/engine/src/**/*",
    "packages/engine/tests/**/*",
    "packages/engine/src/profiles/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "files": true
  }
}
