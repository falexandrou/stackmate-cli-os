{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "downlevelIteration": true,
    "composite": false,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "incremental": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "paths": {
      "@stackmate/cli": [
        "packages/cli/src"
      ],
      "@stackmate/cli/*": [
        "packages/cli/src/*"
      ],
      "@stackmate/engine": [
        "packages/engine/src"
      ],
      "@stackmate/engine/*": [
        "packages/engine/src/*"
      ],
      "tests/cli/*": [
        "packages/cli/tests/*"
      ],
      "tests/engine/*": [
        "packages/engine/tests/*"
      ]
    }
  },
  "include": [
    "packages/cli/src/**/*",
    "packages/cli/tests/**/*",
    "packages/engine/src/**/*",
    "packages/engine/tests/**/*",
    "packages/engine/src/profiles/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
