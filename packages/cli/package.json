{
  "name": "@stackmate/cli",
  "version": "0.0.0",
  "description": "Stackmate - launch and deploy cloud infrastructure using 1-line commands",
  "author": {
    "name": "Fotis Alexandrou (@falexandrou)",
    "url": "https://www.falexandrou.com"
  },
  "bin": {
    "stackmate": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/stackmate-io/stackmate/issues"
  },
  "homepage": "https://stackmate.io",
  "keywords": [
    "stackmate",
    "aws",
    "cloud",
    "terraform",
    "provisioning",
    "deployment"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/stackmate-io/stackmate",
    "directory": "packages/cli"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1.9.2",
    "@oclif/plugin-help": "^5.1.12",
    "@oclif/plugin-plugins": "^2.1.0",
    "@stackmate/engine": "^0.0.0",
    "chalk": "^5.0.1",
    "lodash": "4.17.21",
    "typescript-memoize": "^1.1.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@types/jest": "^28.1.1",
    "jest": "^28.1.1",
    "oclif": "^2.6.3",
    "rollup-plugin-dts": "^4.2.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.6.10"
  },
  "oclif": {
    "bin": "stackmate",
    "dirname": "stackmate",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "deploy": {
        "description": "Deploy your infrastructure to the cloud"
      }
    }
  },
  "scripts": {
    "build": "rimraf dist/* && rollup -c rollup.config.js && oclif manifest",
    "lint": "eslint . --ext .ts",
    "postpack": "rimraf oclif.manifest.json",
    "prepack": "yarn build && oclif readme",
    "manifest": "oclif manifest",
    "command:dev": "./bin/dev",
    "command:run": "./bin/run",
    "version": "oclif readme && git add README.md",
    "test": "jest --bail --verbose --detectOpenHandles",
    "test:watch": "yarn test:all --watchAll"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
