{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "module": "commonjs",
    "composite": false,
    "target": "es6",
    "paths": {
      "@stackmate/cli/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}
