{
  "$id": "https://json-schema.org/draft/2019-09/schema",
  "title": "Stackmate configuration file",
  "type": "object",
  "description": "Stackmate configuration file",
  "properties": {
    "name": {
      "type": "string",
      "description": "The project's name"
    },
    "provider": {
      "type": "string",
      "enum": [
        "aws",
        "digitalocean"
      ]
    },
    "region": {
      "type": "string"
    },
    "secrets": {
      "oneOf": [{
        "type": "object",
        "properties": {
          "provider": {
            "type": "string",
            "const": "aws"
          },
          "bucket": {
            "type": "string"
          }
        },
        "required": [
          "bucket"
        ]
      }, {
        "type": "object",
        "properties": {
          "provider": {
            "type": "string",
            "const": "tfe"
          },
          "org": {
            "type": "string"
          }
        },
        "required": [
          "org"
        ]
      }]
    },
    "stages": {
      "type": "object",
      "description": "The stages to deploy",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9_]+$": {
              "oneOf": [
                {
                  "$ref": "/schemas/services/mysql"
                },
                {
                  "$ref": "/schemas/services/redis"
                }
              ]
            }
          }
        }
      }
    }
  },
  "$defs": {
    "base": {
      "$id": "/schemas/services/base",
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" }
      }
    },
    "mysql": {
      "$id": "/schemas/services/mysql",
      "type": "object",
      "allOf": [
        { "$ref": "/schemas/services/base" },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "aws",
                "digitalocean"
              ]
            },
            "version": {
              "type": "string",
              "enum": [
                "8.0",
                "5.7"
              ]
            },
            "type": {
              "type": "string",
              "const": "mysql"
            },
            "region": {
              "type": "string",
              "enum": [
                "eu-central-1",
                "eu-west-2"
              ]
            }
          }
        }
      ]
    },
    "redis": {
      "$id": "/schemas/services/redis",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "redis"
        },
        "version": {
          "type": "string",
          "enum": [
            "4.0",
            "3.8"
          ]
        }
      }
    }
  },
  "required": [
    "name",
    "provider",
    "region"
  ],
  "allOf": [
    {
      "if": {
        "properties": { "provider": { "const": "aws" } }
      },
      "then": {
        "properties": { "region": { "type": "string", "enum": ["eu-central-1"] } }
      }
    },
    {
      "if": {
        "properties": { "provider": { "const": "digitalocean" } }
      },
      "then": {
        "properties": { "region": { "type": "string", "enum": ["fra1", "lon1"] } }
      }
    }
  ]
}
