{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "composite": true,
    "declaration": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "incremental": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noEmitOnError": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "paths": {
      "@stackmate/engine/*": [
        "./src/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
