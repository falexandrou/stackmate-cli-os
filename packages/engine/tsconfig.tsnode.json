{
  "extends": "./tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "paths": {
      "@stackmate/engine/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
