{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "composite": false,
    "paths": {
      "@stackmate/engine/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "src/schema.ts"
  ],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}
